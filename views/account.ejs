<%- include('partials/metadata') %>

  <body class="cm-page-body">
    <main class="cm-page-body__content-page">
      <div class="container cm-page-body__grid-container">
        <div class="row cm-page-body__grid-base">
          <div class="col-5 cm-page-body__jumbotron-box">
            <%- include('partials/jumbotron', { title: 'Платки' ,
              text: 'Большой выбор женских платков по специальным ценам' }) %>
          </div>
          <div class="col-7 cm-page-body__access-form-box">
            <form method="post" class="shadow rounded cm-access-form">
              <div class="mb-3 cm-access-form__input-box">
                <div class="form-floating">
                  <input type="text" class="form-control text-break cm-access-form__input-text" id="firstName"
                    name="firstName" autocomplete="off" />
                  <label class="text-break" for="firstName">Введите ваше имя</label>
                </div>
              </div>
              <div class="mb-3 cm-access-form__input-box">
                <div class="form-floating">
                  <input type="text" class="form-control text-break cm-access-form__input-text" id="lastName"
                    name="lastName" autocomplete="off" />
                  <label class="text-break" for="lastName">Введите вашу фамилию</label>
                </div>
              </div>
              <div class="mb-3 cm-access-form__input-box">
                <div class="form-floating">
                  <input type="text" class="form-control text-break cm-access-form__input-text" id="nickName"
                    name="nickName" autocomplete="off" />
                  <label class="text-break" for="nickName">Ваше имя на сайте</label>
                </div>
              </div>
              <div class="mb-3 cm-access-form__input-box">
                <div class="form-floating">
                  <input type="password" class="form-control text-break cm-access-form__input-text" id="password"
                    name="password" autocomplete="off" />
                  <label class="text-break" for="password">Введите ваш пароль</label>
                </div>
              </div>
              <div class="mb-3 cm-access-form__login-btn-box">
                <a class="btn btn-primary text-break cm-access-form__login-btn" href="/user/auth">Вход</a>
              </div>
              <div class="cm-access-form__underline"></div>
              <div class="
                cm-access-form__input-box
                cm-access-form__input-box--centered
              ">
                <input type="submit" class="
                    btn
                    btn-success
                    text-break
                    cm-access-form__submit-btn
                  " value="Создать новый аккаунт">
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  </body>

  </html>