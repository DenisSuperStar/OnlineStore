<%- include("partials/metadata") %>
    <body>
        <main>
            <%- include("partials/menu") %>
            <div class="container">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="formControlItemName">Наименование товара</label>
                        <textarea 
                            class="form-control" 
                            id="formControlItemname" 
                            placeholder="Введите название товаара" 
                            name="itemName"
                        >
                        </textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="formControlSize">Размер</label>
                        <textarea 
                            class="form-control" 
                            id="formControlSize" 
                            placeholder="Укажите размер" 
                            name="size"
                        >
                        </textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="formControlStuff">Название материала</label>
                        <textarea 
                            class="form-control" 
                            id="formControlStuff" 
                            placeholder="Укажите материал" 
                            name="stuff"
                        >
                        </textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="formControlPrice">Цена товара</label>
                        <textarea 
                            class="form-control" 
                            id="formControlPrice" 
                            placeholder="Укажите цену" 
                            name="price"
                        >
                        </textarea>
                    </div>
                    <div class="mb-3">
                        <input 
                            type="submit" 
                            class="btn btn-light" 
                            value="Добавить"
                        >
                    </div>
                </form>
            </div>
        </main>
    </body>
</html>